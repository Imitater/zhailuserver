<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F6F6F6"
    android:layout_height="match_parent">
    <include layout="@layout/actionbar"/>
    <TextView
        android:textSize="12sp"
        android:paddingLeft="22dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="请填写本人的支付宝账户"
        android:textColor="@color/account_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="真实姓名：     "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="12sp"
                android:id="@+id/account_name"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/payment_line_gray"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:text="支付宝账号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="number"
                android:textSize="12sp"
                android:id="@+id/account_number"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginLeft="22dp"
        android:textSize="10sp"
        android:textColor="@color/account_gray"
        android:text="＊请确保所填的支付宝账号准确无误，避免不必要的提现失误。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/account_bt"
        android:layout_marginTop="22dp"
        android:textColor="@color/white"
        android:background="@drawable/withdrawal_bt_shape"
        android:text="添加"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>