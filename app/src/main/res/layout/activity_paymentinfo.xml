<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/action_back"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:background="@mipmap/mipmap_close"
            android:layout_width="48dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="收支明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/payment_info_iv"
            android:layout_marginTop="29dp"
            android:layout_gravity="center"
            android:background="@mipmap/mipmap_get"
            android:layout_width="58dp"
            android:layout_height="58dp" />
        <TextView
            android:id="@+id/payment_info_type"
            android:layout_marginTop="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="收入"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/payment_info_money"
            android:layout_marginTop="9dp"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:textColor="@color/black"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/payment_info_gray"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="23dp"
                android:textSize="14sp"
                android:text="当前状态"
                android:textColor="#C3C3C3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payment_info_type_state"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:text="收入"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="23dp"
                android:textSize="14sp"
                android:text="提现金额"
                android:textColor="#C3C3C3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payment_info_type_money"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="23dp"
                android:textSize="14sp"
                android:text="到账时间"
                android:textColor="#C3C3C3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payment_info_get_time"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="80dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="23dp"
                android:textSize="14sp"
                android:text="提现单号"
                android:textColor="#C3C3C3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payment_info_code"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>