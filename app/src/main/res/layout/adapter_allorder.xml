<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/whit">
    <LinearLayout
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@drawable/receipt_type_type"
            android:textSize="16sp"
            android:textColor="@color/whit"
            android:text="帮忙取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/receipt_gray_tv"
                android:layout_marginRight="17dp"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:text="1小时前发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                     android:textColor="@color/receipt_gray_tv"
                    android:textSize="12sp"
                    android:text="服务价格："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="17dp"
                    android:textColor="@color/red"
                    android:text="¥2.00"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/left_line"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"></View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="23dp"
                android:background="@mipmap/ic_launcher"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="性别要求："
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="只要女生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="23dp"
                android:background="@mipmap/ic_launcher"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="2018－11－15"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text=" 14:00～15:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="13dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="23dp"
                android:background="@mipmap/ic_launcher"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:text="收货地址："
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="杭州市江干区杭州电子科技大学101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/left_line"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <Button
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/blue"
            android:text="确认送达"
            android:background="@drawable/button_line_shape"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>