<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="14dp"
             android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:text="商品价格"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/dialog_buy_info_close"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/mipmap_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/dialog_buy_info_et"
                    android:layout_marginLeft="32dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:textColorHint="#B9B9B9"
                    android:textSize="16sp"
                    android:hint="请输入商品价格"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/withdrawal_line_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"></View>
            </LinearLayout>
            <TextView
                android:layout_marginRight="40dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:layout_gravity="bottom"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_buy_info_pic"
            android:background="@color/helpbuy_gray"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_marginTop="22dp"
            android:layout_width="68dp"
            android:gravity="center"
            android:layout_height="68dp">
            <ImageView
                android:background="@mipmap/mipmap_pic"
                  android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#7D7D7D"
                android:textSize="8sp"
                android:text="上传支付凭证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:text="（支付信息截图或小票图片）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/dialog_buy_info_bt"
            android:layout_marginBottom="14dp"
            android:textColor="@color/white"
            android:text="确定"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/withdrawal_bt_shape"
            android:layout_width="match_parent"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>