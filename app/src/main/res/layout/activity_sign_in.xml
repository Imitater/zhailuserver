<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:scaleType="fitXY"
        android:background="@mipmap/mipmap_sing_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="123dp"
        android:layout_marginLeft="49dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textSize="26sp"
            android:text="欢迎来到宅鹿"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="22dp"
            android:textSize="20sp"
                android:text="你的四年,我来陪伴..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/sign_in_line"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:paddingLeft="9dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:background="@mipmap/mipmap_phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:inputType="number"
                android:id="@+id/singin_number"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:background="@android:color/transparent"
                android:hint="请输入手机号码"
                android:textColor="@color/white"
                android:textColorHint="@color/checkcode_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="9dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/sign_in_line"
        android:layout_marginTop="25dp"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:background="@mipmap/mipmap_lock" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:password="true"
                android:id="@+id/singin_password"
                android:layout_width="198dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:background="@android:color/transparent"
                android:hint="请输入登陆密码"
                android:textColor="@color/white"
                android:textColorHint="@color/checkcode_gray"
                android:textSize="12sp" />
                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/singin_islook"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/singin_look"
                        android:layout_width="16dp"
                        android:visibility="invisible"
                        android:layout_height="8dp"
                        android:background="@mipmap/mipmap_look" />
                    <ImageView
                        android:id="@+id/singin_unlook"
                         android:layout_width="16dp"
                        android:layout_height="8dp"
                        android:background="@mipmap/mipmap_unlook" />
                </LinearLayout>
         </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/singin_in"
        android:layout_marginTop="25dp"
        android:background="@drawable/sign_in_shape"
        android:textColor="@color/white"
        android:text="登录"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="34dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/singin_regeister"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="57dp"
        android:textSize="10sp"
        android:text="账号注册"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/singin_forget"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="57dp"
        android:textSize="10sp"
        android:text="忘记密码?"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
     </LinearLayout>
</RelativeLayout>