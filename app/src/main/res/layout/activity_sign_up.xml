<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginLeft="12dp"
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mipmap_close"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:text="注册宅鹿,体验更多服务"
        android:textColor="#000000"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_shouji" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <EditText
                android:numeric="integer"
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:background="#ffffff"
                android:hint="请输入手机号"
                android:paddingBottom="12dp"
                android:textColor="#000000"
                android:textColorHint="#B7B7B7"
                android:textSize="12sp" />

            <View
                android:layout_width="242dp"
                android:layout_height="0.25dp"
                android:background="#999999" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_dunpai" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:numeric="integer"
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#ffffff"
                    android:hint="请输入手机验证码"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#B7B7B7"
                    android:textSize="12sp" />

                <View
                    android:layout_width="172dp"
                    android:layout_height="0.25dp"
                    android:background="#999999" />
            </LinearLayout>

            <Button
                android:id="@+id/button_get_captcha"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_shape005_sign_up"
                android:text="获取验证码"
                android:textColor="#3D48B1"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_suo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:password="true"
                    android:id="@+id/editText3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:hint="请设置登录密码"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#B7B7B7"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/regeister_islook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/regeister_look"
                        android:layout_width="16dp"
                        android:layout_height="8dp"
                        android:background="@mipmap/icon_zhengkai" />

                    <ImageView
                        android:id="@+id/regeister_unlook"
                        android:layout_width="16dp"
                        android:layout_height="8dp"
                        android:background="@mipmap/icon_bishang" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="242dp"
                android:layout_height="0.25dp"
                android:background="#999999" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
         android:background="@drawable/button_shape006_sign_up"
        android:text="注册"
        android:textColor="#FEFEFE"
        android:textSize="13sp" />

    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_centerInParent="true"
                android:background="@color/colorAccent"
                android:layout_gravity="bottom"
                android:layout_marginRight="88dp"
                android:layout_marginLeft="88dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:textColor="@color/checkcode_gray"
                android:textSize="12sp"
                android:text="其他登录方式"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/singin_weixin"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/icon_weixin"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#616161"
            android:textSize="12sp"
            android:layout_marginBottom="25sp"
            android:text="注册即代表你同意《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>